{
  "name": "kortex",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Kortex: The All-in-One Workspace for Notes, Code, and Tasks",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint:convex": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:pwa": "node scripts/test-pwa-offline.js",
    "test:pwa:ci": "HEADLESS=true node scripts/test-pwa-offline.js"
  },
  "dependencies": {
    "@automerge/automerge": "^2.2.8",
    "@convex-dev/auth": "^0.0.80",
    "@heroicons/react": "^2.2.0",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/extension-task-item": "^3.0.9",
    "@tiptap/extension-task-list": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@types/jszip": "^3.4.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jszip": "^3.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "15.6.1",
    "react-tooltip": "^5.29.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "~10.4.21",
    "convex-test": "^0.0.38",
    "dotenv": "^16.6.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "npm-run-all": "^4.1.5",
    "postcss": "~8.5.6",
    "puppeteer": "^24.16.1",
    "tailwindcss": "~3.4.17",
    "typescript": "~5.7.3",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.2",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
