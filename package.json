{
  "name": "kortex",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Kortex: The All-in-One Workspace for Notes, Code, and Tasks",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint:convex": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.80",
    "@heroicons/react": "^2.2.0",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/extension-task-item": "^3.0.9",
    "@tiptap/extension-task-list": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@types/jszip": "^3.4.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jszip": "^3.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-tooltip": "^5.29.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "~10.4.21",
    "dotenv": "^16.6.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8.5.6",
    "tailwindcss": "~3.4.17",
    "typescript": "~5.7.3",
    "vite": "^6.3.5"
  }
}
